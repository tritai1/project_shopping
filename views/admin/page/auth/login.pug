extends ../../layout/auth.pug
include ../../mixin/alert.pug
block main 
    +alert-error(5000)
    .container.my-5
        .row.justify-content-center 
            .col-8
                h1.text-center Đăng nhập
                form(action=`${variableAll}/auth/login`, method="POST")
                    .form-group
                    label(for="email") Email
                    input#email.form-control(type="email", name="email", placeholder="Nhập email")

                    .form-group
                    label(for="password") Mật khẩu
                    input#password.form-control(type="password", name="password", placeholder="Nhập mật khẩu")

                    .form-group.text-center
                    button.btn.btn-primary(type="submit") Đăng nhập
